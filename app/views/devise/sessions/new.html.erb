<div class="container">
	<div class="col-md-3"></div>
	<div class="col-md-6">
		<div class="col-md-1"></div>
		<div class="col-md-10">
			<h2><%=_('Log in')%></h2>

			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="form-inputs">
				<%= f.input :email, required: false, autofocus: true, label: 'Email' %>
				<%= f.input :password, required: false, label: 'Password' %>
				<%= f.input :remember_me, label: _('Remember me'), as: :boolean if devise_mapping.rememberable? %>
			</div>

			<div class="form-actions">
				<%= f.button :submit, _('Log in') %>
			</div>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
		<div class="col-md-1"></div>
	</div>
	<div class="col-md-3"></div>
</div>
