<div class="container">
	<div class="row books-search">
		<h2><%= _('Search')%></h2>
		<%= render 'form_search' %>  
	</div>
	<% if !@books.nil?%>
	<div class="row">
		<ul class="list-group">
			<% @books.each do |book| %>
			<li class="list-group-item">
				<div class="row">
					<div class="col-md-3">
						<%= image_tag book.cover.url , class: "cover"  %>
					</div>
					<div class="col-md-6 info">
						<h3 class="list-group-item-heading"><%= book.title %></h3>
						<p class="list-group-item-text">
							<span><b>ISBN : </b><%= book.isbn %></span>
						</p>
						<p class="list-group-item-text">
							<span><b><%= _('Type of sale :')%></b><%= book.typeOfSale %></span>
						</p>
					</div>
					<div class="col-md-3 but">
						<%= link_to wishlist_insert_path(:book_id => book.id), :method => :post, class: "btn btn-default"  do%>
							<%= fa_icon "heart"%>
						<%end%>
						<%= link_to _('Request'), books_req_path(:b_id => book.id), :method => :post, class: "btn btn-warning" %>
					</div>
				</div>
			</li>
			<% end %>
		</ul>
	</div>
	<%end%>
</div>
<script type="text/javascript">
	$('#search').bind('railsAutocomplete.select', function(event, data){
		$('#search-form').submit()
	});
</script>
