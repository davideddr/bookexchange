<% books.each do |book| %>
<li class="list-group-item">
  <div class="row">
    <div class="col-md-2">
      <%= image_tag book.cover.url , class: "cover"  %>
    </div>
    <div class="col-md-6 info">
      <h3 class="list-group-item-heading"><%= book.title %></h3>
      <p class="list-group-item-text">
        <span><b>ISBN : </b><%= book.isbn %></span>
      </p>
      <p class="list-group-item-text">
        <span><b><%= _('Type of sale : ') %></b><%= book.typeOfSale %></span>
      </p>
    </div>
    <div class="col-md-4 but">
      <%= link_to _('Show') ,books_show_info_path(:id_bo => book.id, :u => 2), class: "btn btn-default" %>
      <%= link_to _('Delivery'), provides_prov_path(:b_id => book.id), class: "btn btn-warning" %>
    </div>
  </div>
</li>
<% end %>