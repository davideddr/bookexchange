<% @req.each do |book| %>
<li class="list-group-item">
	<div class="row">
		<div class="col-md-3">
			<%= image_tag book.cover.url , class: "cover"  %>
		</div>
		<div class="col-md-6 info">
			<h3 class="list-group-item-heading"><%= book.title %></h3>
			<p class="list-group-item-text">
				<span><b>ISBN : </b><%= book.isbn %></span>
			</p>
			<p class="list-group-item-text">
				<span><b><%= _('Type of sale : ') %></b><%= book.typeOfSale %></span>
			</p>
		</div>
		<div class="col-md-3 but">
			<%= link_to _('Show'), books_show_info_path(:id_bo => book.id, :u => 1) , class: "btn btn-default" %>
			<%= link_to _('Remove request'), books_remove_path(:b_id => book.id), :method => :post, class: "btn btn-danger"  %>
		</div>
	</div>
</li>
<%end%>